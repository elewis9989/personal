---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: string;
  date?: Date;
}

const { title, description, image, type, date } = Astro.props;
const { pathname } = Astro.url;
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="author" content="Roze" />
  <meta name="viewport" content="width=device-width" />
  <meta name="robots" content="index, follow" />
  {
    type === "article" && date ? (
      <meta property="article:published_time" content={date.toISOString()} />
    ) : null
  }
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={`https://roze.dev${pathname}`} />
  <meta
    property="og:image"
    content={`https://roze.dev${image ?? "/images/roze.jpg"}`}
  />
  <meta property="og:type" content={type ?? "website"} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta
    name="twitter:image"
    content={`https://roze.dev${image ?? "/images/roze.jpg"}`}
  />
  <link rel="canonical" href={`https://roze.dev${pathname}`} />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <ViewTransitions />
</head>

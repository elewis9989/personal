---
interface Props {
  url: string;
  title: string;
  date: Date;
}

const { title, date, url } = Astro.props;
---

<div class="space-y-2">
  <a href={url} class="hover:underline hover:underline-offset-8 text-xl"
    >{title}</a
  >
  <div class="space-x-4 text-sm font-medium">
    <time
      >🗓️ {
        date.toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }</time
    >
  </div>
</div>

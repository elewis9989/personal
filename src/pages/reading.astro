  },
];

const year_2024 = [
    {
      title: "All My rage",
      author: "Sabaa Tahir",
      url: "https://app.thestorygraph.com/books/886732d9-bf58-40fa-ab6d-c3143bc37317",
      rating: "3.75"
    },
    {
      title: "Starter Villain",
      author: "John Scalzi",
      url: "https://app.thestorygraph.com/books/98affc66-6322-47fc-a006-52534dc2b4e9",
      rating: "2.5"
    },
    {

---
import "@styles/global.css";
import Head from "@components/Head.astro";
import "@fontsource-variable/inter";
import "@fontsource-variable/noto-nastaliq-urdu";
import "@fontsource-variable/noto-serif";
import { Navigation } from "@components/navigation/navigation.tsx";
import { Image } from "astro:assets";
import graphImg from "../images/graph.svg";

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: string;
  date?: Date;
}

const { title, description, image, type, date } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    title={title}
    description={description}
    type={type}
    image={image}
    date={date}
  />
  <body class="relative">
    <header>
      <Navigation client:load pathname={Astro.url.pathname} />
      <Image
        src={graphImg}
        alt="Three polygons connected"
        class="absolute md:top-10 md:right-20 top-6 right-5 md:w-16 w-12 h-auto"
      />
    </header>
    <main class="text-base font-serif pt-4 md:pt-0"><slot /></main>
  </body>
</html>
